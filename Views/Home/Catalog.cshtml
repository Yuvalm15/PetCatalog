@using PetShopProject.Models;
@model IEnumerable<PetShopProject.Models.Animal>;

<div class="myText">

    <div class="page-header">
        <h1>Catalog</h1>
    </div>
    <hr />
    @{
        var Categories = ViewBag.Categories as IEnumerable<Category>;
    }

    <div class="dropdown">
        <button class="btn btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Select Category
        </button>
        <ul class="dropdown-menu">
            @foreach (var category in Categories!)
            {
                <li><a class="dropdown-item" asp-action="ShowAnimalByCategory" asp-route-id="@category.Id">@category.CategoryName</a></li>
            }
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-action="Catalog">Show All</a></li>
        </ul>
    </div>


    <div class="container">
        <div class="row">
            <div class="col">Picture</div>
            <div class="col">Name</div>
            <div class="col">Description</div>
        </div>
        @foreach (var animal in Model)
        {

            <div class="row myStripedView">

                <div class="col"><img src="/Assets/AnimalPictures/@animal.ImagePath" width="120" height="100" /></div>
                <div class="col"><a asp-action="ShowAnimal" asp-route-Id=@animal.Id>@animal.Name</a></div>
                <div class="col">@animal.Description</div>
            </div>
        }
    </div>
</div>
